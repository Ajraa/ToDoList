<Window x:Class="ToDoListUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="178,93,0,0" VerticalAlignment="Top" FontSize="20" Height="35"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="178,163,0,0" VerticalAlignment="Top" FontSize="20" Width="99" Height="35"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="317,163,0,0" VerticalAlignment="Top" Width="246" FontSize="20" Height="35"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Margin="317,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Height="35" FontSize="20"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Center" Margin="0,245,0,0" VerticalAlignment="Top" Width="175" Height="56" FontSize="24" Click="loginButton_Click"/>
        <Button x:Name="registerButton" Content="Register" HorizontalAlignment="Center" Margin="0,327,0,0" VerticalAlignment="Top" Width="176" Height="56" FontSize="24" Click="registerButton_Click"/>

    </Grid>
</Window>
